{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": false,
    "outDir": "dist/",
    "baseUrl": ".",
    "types": ["./types"],
    "paths": {
      "@lib/*": ["lib/*"],
      "@src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
